<script>
  function remettre()
  {
    var scriptMessages = document.createElement('script');
      scriptMessages.src = 'php/index.php';
      document.body.appendChild(scriptMessages);

  }
  setInterval(remettre,1000)

  function envoyer()
  {
    var message = document.getElementById('textarea_message').value;
    var scriptEnvoie = document.createElement('script');
    scriptEnvoie.src = 'php/envoie.php?message=' + message;
    document.body.appendChild(scriptEnvoie);
  }
  
  

  function afficheMessages(message) {
    alert(message)
  }
  
</script>


<div class="container-fluid">
